{
  "name": "Flutter Web",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-contrib/features/flutter-sdk:2": {}
  },
  "forwardPorts": [3000, 5000, 8080],
  "portsAttributes": {
    "3000": {
      "label": "Flutter Web",
      "onAutoForward": "openPreview"
    },
    "5000": {
      "label": "API Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "flutter pub get && flutter config --enable-web",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code",
        "ms-vscode.vscode-chrome-debug",
        "ms-vscode.vscode-node-azure-pack"
      ]
    }
  }
}